<Window x:Class="Decision_Color.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decision_Color"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="PickMethod" Content="Please Pick Number 1 for a if Statement or Number 2 for a Switch Statement." />
            <TextBox x:Name="Number" TextWrapping="Wrap" Margin="10 10 10 10"/>
            <Label x:Name="Decision" />
            <TextBox x:Name="Letter" TextWrapping="Wrap" Margin="10 10 10 10"/>
            <Button x:Name="Submit" Content="Submit" Click="paintBelow" />
            <Canvas x:Name="Ted" Height="250" Width="700" Margin="10 10 10 10" />
        </StackPanel>
    </Grid>
</Window>
